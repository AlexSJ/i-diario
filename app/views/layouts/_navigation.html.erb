<aside id="left-panel">
  <div class="login-info">
    <span>
      <% if user_signed_in? %>
        <%= link_to "#", title: 'Editar meus dados', data: { toggle: "modal", target: "#role-modal", backdrop: "static", keyboard: "false" } do %>
          <%= gravatar_image_tag current_user.email %>
          <%= content_tag :span, current_user.navigation_display %>
          <%= content_tag :i, "", class: "fa fa-angle-down" %>
        <% end %>
      <% end %>
    </span>
  </div>

  <nav>
    <%= ***REMOVED***s %>
  </nav>

</aside>

<div class="modal" tabindex="-1" role="dialog" id="role-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Selecione o perfil atual</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @current_user, url: set_current_role_path, html: { method: :patch, class: "simple_form smart-form" } do |f| %>
          <%= f.input :current_user_role_id, as: :select2, elements: @current_user.user_roles %>
          <%= f.input :teacher_id, as: :select2, elements: Teacher.all.limit(2) %>
          <%= f.input :current_classroom_id, as: :select2, elements: Classroom.all.limit(2) %>
          <%= f.input :current_discipline_id, as: :select2, elements: Discipline.all.limit(2) %>

          <div class="modal-footer">
            <%= f.submit "Usar este perfil", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
