<div class="widget-body no-padding">
  <%= simple_form_for :search, { url: avaliations_path, method: :get, html: { class: 'filterable_search_form' } } do |f| %>
    <div class="table-responsive">
      <table class="table table-bordered table-only-inner-bordered table-striped table-condensed table-hover" id="resources">
        <thead>
          <tr>
            <td><%= f.input :by_unity_id, as: :select2, elements: @unities, label: false, placeholder: t('.by_unity_id') %></td>
            <td><%= f.input :by_classroom_id, as: :select2, elements: @classrooms, label: false, placeholder: t('.by_classroom_id') %></td>
            <td><%= f.input :by_discipline_id, as: :select2, elements: @disciplines, label: false, placeholder: t('.by_discipline_id') %></td>
            <td>
              <div class="icon-addon">
                <label for="search_by_test_date" class="fa fa-calendar"></label>
                <%= f.text_field :by_test_date, as: :date, label: false, placeholder: t('.by_test_date'), class: 'form-control date datepicker' %>
              </div>
            </td>
            <td></td>
            <td><%= f.input :by_description, label: false, placeholder: t('.by_description') %></td>
            <td><%= link_to t('.new_html'), new_avaliation_path, class: "btn btn-primary pull-right" %></td>
          </tr>
          <tr>
            <th><%= Avaliation.human_attribute_name :unity %></th>
            <th><%= Avaliation.human_attribute_name :classroom %></th>
            <th><%= Avaliation.human_attribute_name :discipline %></th>
            <th><%= Avaliation.human_attribute_name :test_date %></th>
            <th><%= Avaliation.human_attribute_name :classes %></th>
            <th><%= Avaliation.human_attribute_name :description %></th>
            <td width="190px"></td>
          </tr>
        </thead>

        <%= render 'resources' %>

        <tfoot id="paginator" class="remote">
          <td colspan="7">
            <div id="page_entries_info" class="pull-left hidden-xs">
              <%= page_entries_info @avaliations %>
            </div>
            <div class="pull-right">
              <%= paginate @avaliations %>
            </div>
          </td>
        </tfoot>
      </table>
    </div>
  <% end %>
</div>