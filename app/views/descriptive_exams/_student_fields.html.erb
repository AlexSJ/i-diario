<tr class="nested-fields">
  <td>
    <%= sequence %>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :dependence %>
  </td>
  <td>
    <%= f.input :student_id, as: :hidden %>
    <span class="<%= descriptive_exam_student_name_class(f.object) %>">
      <%= descriptive_exam_student_name(f.object) %>
    </span>
  </td>

  <td>
    <%= f.input :value,
                label_html: { class: 'hidden' },
                input_html: { maxlength: GeneralConfiguration.current.max_descriptive_exam_character_count },
                readonly: f.object.exempted_from_discipline %>
  </td>
</tr>
