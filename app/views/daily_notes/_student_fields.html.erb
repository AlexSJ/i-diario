<tr class="nested-fields <%= f.object.dependence? ? 'warning' : '' %>">
  <td>
    <%= sequence %>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :dependence %>
  </td>
  <td>
    <%= f.input :student_id, as: :hidden %>
    <%= "#{f.object.dependence? ? '* ' : ''}#{f.object.student.to_s}" %>
  </td>

  <td>
    <%= f.input :note, label_html: { class: 'hidden' },
          input_html: { data: { inputmask: "'digits': #{f.object.daily_note.avaliation.test_setting.number_of_decimal_places}" } } %>
  </td>
</tr>
