<% content_for :js do %>
  <%= javascript_include_tag 'views/roles/edit' %>
<% end %>

<fieldset>
  <div class="row">
    <div class="col col-sm-4">
      <%= f.input :name %>
    </div>

    <div class="col col-sm-4">
      <%= f.input :author, disabled: true %>
    </div>

    <div class="col col-sm-4">
      <%= f.input :access_level, as: :select2, elements: AccessLevel.to_select.to_json %>
    </div>
  </div>

  <div class="row">
    <div class="col col-sm-12">
      <p class="alert alert-info" id="administrator-role-info" style="display:none;">
  	     <i class="fa fa-info"></i>
         O nível de acesso <strong> Administrador </strong> não exigirá vínculo com unidades no cadastro de usuários.
      </p>

      <p class="alert alert-info" id="employee-role-info" style="display:none;">
  	     <i class="fa fa-info"></i>
         O nível de acesso <strong> Servidor </strong> exigirá vínculo com unidades no cadastro de usuários.
      </p>

      <p class="alert alert-info" id="teacher-role-info" style="display:none;">
  	     <i class="fa fa-info"></i>
         O nível de acesso <strong> Professor </strong> exigirá vínculo com unidades e com um professor no cadastro de usuários.
      </p>

      <p class="alert alert-info" id="parent-role-info" style="display:none;">
  	     <i class="fa fa-info"></i>
          O nível de acesso <strong> Pais </strong> exigirá vínculo com um ou mais alunos.
      </p>

      <p class="alert alert-info" id="student-role-info" style="display:none;">
         <i class="fa fa-info"></i>
         O nível de acesso <strong> Aluno </strong> exigirá vínculo com um aluno no cadastro de usuários.
      </p>

    </div>
  </div>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Funcionalidade</th>
        <th>Acesso</th>
      </tr>
    </thead>

    <tbody>
      <%= f.association :permissions do |p| %>
        <%= render 'permission', f: p %>
      <% end %>
    </tbody>
  </table>
</fieldset>
