<tr class="nested-fields <%= f.object.persisted? ? 'existing' : 'dynamic' %>">
  <td>
    <% if f.object.persisted? %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
    <% end %>

    <%= f.input :student_id, as: :hidden %>
    <%= f.object.student.name %>
  </td>

  <td>
    <%= f.input :score, label_html: { class: 'hidden' } %>
  </td>
</tr>
