<% if @form.errors.any? %>
  $("#discipline_content_record_cloner_form_classroom_ids").closest(".control-group").removeClass("has-danger");
  $("#discipline_content_record_cloner_form_classroom_ids").closest(".control-group").find("span.help-inline").remove();
  $("#discipline_content_record_cloner_form_classroom_ids").closest(".control-group").addClass("error");
  $("#discipline_content_record_cloner_form_classroom_ids").closest(".control-group").append('<span class="help-inline"><%= @form.errors.values.join(",") %></span>');
<% else %>
  location.reload();
<% end %>