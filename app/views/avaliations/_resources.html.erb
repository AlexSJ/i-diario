<tbody id="resources-tbody">
  <% if @avaliations.empty? %>
    <tr>
      <td class="no_record_found" colspan="7"> <%= t('views.index.no_record_found')%></td>
    </tr>
  <% else %>
    <% @avaliations.each do |avaliation| %>
      <tr>
        <td><%= avaliation.unity %></td>
        <td><%= avaliation.classroom %></td>
        <td><%= avaliation.discipline %></td>
        <td><%= l(avaliation.test_date) %></td>
        <td>
          <% avaliation.classes.each do |class_number| %>
            <span class="label label-info label-list">
              <%= class_number %>
            </span>
          <% end %>
        </td>
        <td><%= avaliation %></td>
        <td class="actions">
          <%= link_to t('views.index.edit'), edit_avaliation_path(avaliation), class: 'btn btn-success' %>
          <%= link_to t('views.index.delete'), avaliation_path(avaliation), class: 'btn btn-danger', method: 'delete', data: { confirm: t('views.index.confirm') } %>
        </td>
      </tr>
    <% end %>
  <% end %>
</tbody>