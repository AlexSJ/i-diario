<%= link_to 'Novo', new_unity_path, class: "btn btn-success" %>

<table class="table table-bordered" id="resources">
  <thead>
    <tr>
      <td><%= Unity.human_attribute_name :name %></td>
      <td><%= Unity.human_attribute_name :phone %></td>
      <td><%= Unity.human_attribute_name :email %></td>
      <td><%= Unity.human_attribute_name :responsible %></td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @unities.each do |unity| %>
      <tr>
        <td><%= link_to unity, edit_unity_path(unity) %></td>
        <td><%= unity.phone %></td>
        <td><%= unity.email %></td>
        <td><%= unity.responsible %></td>
        <td>
          <%= link_to 'Editar', edit_unity_path(unity), class: "btn btn-success" %>
          <%= link_to 'Excluir', unity_path(unity), class: "btn btn-danger", method: "delete", data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
