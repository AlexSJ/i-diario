<div class="widget-body no-padding">
  <%= simple_form_for :synchronize, { url: create_batch_school_calendars_path } do |f| %>
    <div class="table-responsive">
      <table class="table table-bordered table-condensed selectable" id="resources">
        <thead>
          <tr>
            <th><input type="checkbox" id="select-all"></th>
            <th><%= SchoolCalendar.human_attribute_name :year %></th>
            <th><%= SchoolCalendar.human_attribute_name :unity %></th>
            <th><%= SchoolCalendar.human_attribute_name :number_of_classes %></th>
          </tr>
        </thead>

        <tbody>
          <% @school_calendars.each do |school_calendar| %>
            <%= f.simple_fields_for school_calendar do |s| %>
            <tr id="unity_<%= school_calendar.unity.api_code %>">
              <td>
                <input type="checkbox" name="synchronize[][synchronize]" class="select-target">
              </td>
              <td>
                <%= school_calendar.year %>
              </td>
              <td>
                <input type="hidden" name="synchronize[][api_code]" value="<%= school_calendar.unity.api_code %>">
                <%= truncate(school_calendar.unity.to_s, length: 40) %>
              </td>
              <td>
                <%= s.input :number_of_classes, label_html: { class: 'hidden' }, input_html: { name: 'synchronize[][number_of_classes]' } %>
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= button_tag 'Sincronizar', class: 'btn btn-success' %>
    <%= link_to 'Voltar', school_calendars_path, class: 'btn btn-info' %>
  <% end %>
</div>