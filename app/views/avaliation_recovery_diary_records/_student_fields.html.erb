<tr class="nested-fields <%= f.object.persisted? ? 'existing' : 'dynamic' %>" style="<%= 'display: none;' if f.object.marked_for_destruction? %>">
  <td>
    <%= sequence %>
  </td>
  <td>
    <% if f.object.persisted? %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
    <% end %>

    <%= f.input :student_id, as: :hidden %>
    <span class="<%= f.object.dependence ? 'dependence-student' : '' %>">
      <%= f.object.dependence ? "*"+f.object.student.name : f.object.student.name %>
    </span>
  </td>

  <td>
    <%= @student_notes[f.object.student_id] if @student_notes %>
  </td>

  <td>
    <%= f.input :score, label: false,
          input_html: decimal_input_mask(@number_of_decimal_places) %>
  </td>
</tr>
