<%= simple_form_for @content, html: { class: "smart-form" } do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <div class="row">
      <div class="col col-sm-4">
        <%= f.association :unity, as: :select2, elements: @unities %>
      </div>

      <div class="col col-sm-4">
        <%= f.association :classroom, as: :select2, elements: @classrooms %>
      </div>

      <div class="col col-sm-4">
        <%= f.association :discipline, as: :select2, elements: @disciplines, required: true%>
      </div>

      <div class="col col-sm-4">
        <%= f.association :knowledge_area, as: :select2, elements: @knowledge_areas, required: true %>
      </div>
      
    </div>
    
    <div class="row">

      <div class="col col-sm-4">
        <%= f.label :content_date %>
        <div class="icon-addon">
          <label for="content_date" class="fa fa-calendar"></label>
          <%= f.text_field :content_date, class: 'form-control date datepicker col col-sm-4' %>
        </div>
      </div>

      <div class="col col-sm-4">
        <%= f.input :classes, as: :select2, elements: number_of_classes_elements(@number_of_classes), multiple: true, input_html: { value: f.object.classes.join(','), data: { without_json_parser: true } } %>
      </div>

    </div>

    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :theme, :input_html => {:class => "col col-sm-12"} %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :description, :input_html => {:class => "col col-sm-12"} %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :goals, :input_html => {:class => "col col-sm-12"} %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :means, :input_html => {:class => "col col-sm-12"} %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :evaluation, :input_html => {:class => "col col-sm-12"} %>
      </div>
    </div>

    <div class="row">
      <div class="col col-sm-12">
        <%= f.input :bibliography, :input_html => {:class => "col col-sm-12"} %>
      </div>
    </div>
  </fieldset>

  <footer>
    <%= link_to "Voltar", contents_path, class: "btn btn-default" %>

    <% if @content.persisted? %>
      <%= link_to 'HistÃ³rico', history_content_path(@content), class: 'btn btn-info' %>
    <% end %>

    <%= f.submit 'Salvar', class: 'btn btn-primary' %>

  </footer>
<% end %>
