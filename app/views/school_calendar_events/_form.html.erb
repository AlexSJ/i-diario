<%= simple_form_for [@school_calendar, @school_calendar_event], html: { class: "smart-form" } do |f| %>
  <%= f.error_notification %>
  <%= f.input :school_calendar_id, as: :hidden %>
  <%= f.input :coverage, as: :hidden %>

  <fieldset>
    <% if @school_calendar_event.coverage != CoveragesOfEvent::BY_UNITY %>
    <div class="row">
      <div class="col col-sm-4">
        <%= f.input :course_id, as: :select2, elements: @courses %>
      </div>

      <div class="col col-sm-4">
        <%= f.association :grade, as: :select2, elements: @grades %>
      </div>
      <% if @school_calendar_event.coverage == CoveragesOfEvent::BY_CLASSROOM %>
      <div class="col col-sm-4">
        <%= f.association :classroom, as: :select2, elements: @classrooms %>
      </div>
      <% end %>
    </div>
    <% end %>
    <div class="row">
      <div class="col col-sm-4">
        <%= f.input :event_date %>
      </div>

      <div class="col col-sm-4">
        <%= f.input :description %>
      </div>
      <div class="col col-sm-4">
        <%= f.input :event_type, collection: EventTypes %>
      </div>
    </div>

  </fieldset>

  <footer>
    <%= link_to "Voltar", school_calendar_school_calendar_events_path, class: "btn btn-default" %>

    <% if @school_calendar_event.persisted? %>
      <%= link_to 'HistÃ³rico', history_school_calendar_school_calendar_event_path(id: @school_calendar_event, school_calendar: @school_calendar), class: 'btn btn-info' %>
    <% end %>

    <%= f.submit 'Salvar', class: 'btn btn-primary' %>

  </footer>
<% end %>
