<tbody id="resources-tbody">
  <% if @contents.empty? %>
    <tr>
      <td class="no_record_found" colspan="6"> <%= t('views.index.no_record_found')%></td>
    </tr>
  <% else %>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.unity %></td>
        <td><%= content.classroom %></td>
        <td><%= content.discipline %><%= content.knowledge_area%></td>
        <td><%= l content.content_date %></td>
        <td>
          <% content.classes.each do |class_number| %>
            <span class="label label-info label-list">
              <%= class_number %>
            </span>
          <% end %>
        </td>
        <td class="actions">
          <%= link_to 'Editar', edit_content_path(content),
            class: "btn btn-success" %>
          <%= link_to 'Excluir', content_path(content),
            class: "btn btn-danger", method: "delete", data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  <% end %>
</tbody>