<% content_for :js do %>
  <%= javascript_include_tag 'views/accounts/edit' %>
<% end %>
<div class="widget-body no-padding">
  <%= simple_form_for(@user, url: account_path, html: { method: :put, class: "smart-form" }) do |f| %>
    <%= f.error_notification %>

    <fieldset>
      <div class="row">
        <div class="col col-sm-3">
          <%= f.input :first_name %>
        </div>

        <div class="col col-sm-3">
          <%= f.input :last_name %>
        </div>

        <div class="col col-sm-6">
          <%= f.input :email, required: true, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col col-sm-3">
          <%= f.input :login %>
        </div>

        <div class="col col-sm-3">
          <%= f.input :phone, as: :tel %>
        </div>

        <div class="col col-sm-2">
          <%= f.input :cpf %>
        </div>

        <div class="col col-sm-4">
          <%= f.input :authorize_email_and_sms, inline_label: true, label: false %>
        </div>
      </div>

      <div class="row">
        <div class="col col-sm-4">
          <%= f.input :password, autocomplete: "off", hint: "deixe em branco se você não quiser mudá-lo", required: false %>
        </div>

        <div class="col col-sm-4">
          <%= f.input :password_confirmation, required: false %>
        </div>

        <div class="col col-sm-4">
          <%= f.input :current_password, hint: "precisamos de sua senha atual para confirmar as alterações", required: true %>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <legend>Anúncios e novidades do produto</legend>
      <div class="row" style="margin-top: -20px;">
        <div class="col col-sm-4">
          <%= f.input :receive_news, inline_label: true, label: false, input_html: { checked: f.object.receive_news == !!f.object.receive_news ? f.object.receive_news : true } %>
        </div>
      </div>
      <div class="row receive_news_options">
        <% if f.object.can_receive_news_related_daily_teacher? %>
          <div class="col col-sm-6" style="padding-left: 50px;">
            <%= f.input :receive_news_related_daily_teacher, inline_label: true, label: false, input_html: { checked: f.object.receive_news_related_daily_teacher == !!f.object.receive_news_related_daily_teacher ? f.object.receive_news_related_daily_teacher : true } %>
          </div>
        <% end %>
        <% if f.object.can_receive_news_related_***REMOVED***? %>
          <div class="col col-sm-6" style="padding-left: 50px;">
            <%= f.input :receive_news_related_***REMOVED***, inline_label: true, label: false, input_html: { checked: f.object.receive_news_related_***REMOVED*** == !!f.object.receive_news_related_***REMOVED*** ? f.object.receive_news_related_***REMOVED*** : true } %>
          </div>
        <% end %>
      </div>
      <div class="row receive_news_options">
        <% if f.object.can_receive_news_related_tools_for_parents? %>
          <div class="col col-sm-6" style="padding-left: 50px;">
            <%= f.input :receive_news_related_tools_for_parents, inline_label: true, label: false, input_html: { checked: f.object.receive_news_related_tools_for_parents == !!f.object.receive_news_related_tools_for_parents ? f.object.receive_news_related_tools_for_parents : true } %>
          </div>
        <% end %>
        <% if f.object.can_receive_news_related_all_matters? %>
          <div class="col col-sm-6" style="padding-left: 50px;">
            <%= f.input :receive_news_related_all_matters, inline_label: true, label: false, input_html: { checked: f.object.receive_news_related_all_matters == !!f.object.receive_news_related_all_matters ? f.object.receive_news_related_all_matters : true } %>
          </div>
        <% end %>
      </div>

    </fieldset>

    <footer>
      <%= f.button :submit, "Alterar", class: "btn btn-primary" %>
    </footer>
  <% end %>
</div>
