<tr class="nested-fields <%= f.object.new_record? ? 'dynamic' : 'existing' %>"  style="<%= 'display: none;' if f.object.marked_for_destruction? || f.object.marked_as_invisible? %>">
  <td>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :discipline_id %>
    <%= f.hidden_field :exempted_discipline %>
    <%= f.hidden_field :_destroy, value: f.object.exempted_discipline ? true : nil %>
    <span class="<%= conceptual_exam_value_student_name_class(f.object) %>">
      <%= conceptual_exam_value_student_name(f.object) %>
    </span>
  </td>

  <td>
    <%= f.input :value, as: :select2,
          elements: f.object.decorator.data_for_select2,
          label_html: { class: 'hidden' },
          readonly: f.object.exempted_discipline %>
  </td>
</tr>
