<div class="widget-body">
  <% if resource.all_audits.exists? %>
    <div class="table-responsive">
      <table class="table table-bordered table-only-inner-bordered" id="history">
        <thead>
          <tr>
            <th>Ação</th>
            <th>Alterações</th>
            <th>Autor</th>
            <th>Data</th>
          </tr>
        </thead>
        <tbody>
          <legend> Plano de ensino </legend>
          <% resource.teaching_plan.all_audits.each do |audit| %>
            <%= render 'history', record: AuditDecorator.new(audit) %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning alert-dismissable">
      Nenhuma alteração realizada.
    </div>
  <% end %>

  <% if resource.contents.any? %>
    <div class="table-responsive">
      <table class="table table-bordered table-only-inner-bordered" id="history">
        <thead>
          <tr>
            <th>Ação</th>
            <th>Alterações</th>
            <th>Autor</th>
            <th>Data</th>
          </tr>
        </thead>
        <tbody>
          <legend> Conteúdos </legend>
          <% resource.contents.each do |content| %>
            <% content.all_audits.each do |audit| %>
              <%= render 'history', record: AuditDecorator.new(audit) %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning alert-dismissable">
      Nenhuma alteração realizada.
    </div>
  <% end %>
</div>

