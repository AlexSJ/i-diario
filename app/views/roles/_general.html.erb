<fieldset>
  <div class="row">
    <div class="col col-sm-4">
      <%= f.input :name %>
    </div>

    <div class="col col-sm-4">
      <%= f.input :author, disabled: true %>
    </div>

    <div class="col col-sm-4">
      <%= f.input :kind, as: :select2, elements: RoleKind.to_select.to_json %>
    </div>
  </div>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Funcionalidade</th>
        <th>Acesso</th>
      </tr>
    </thead>

    <tbody>
      <%= f.association :permissions do |p| %>
        <%= render 'permission', f: p %>
      <% end %>
    </tbody>
  </table>
</fieldset>
